<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DarkFit_app.BuyPage"
             BackgroundColor="#f1f2f3"
             Title="Корзина">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto,*" VerticalOptions="Center" Padding="0">
            <Image Source="darkfitCaption.png"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   Grid.Column="0" />
            <Label Text="Корзина"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   Margin="0,0,35,0"
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="28"
                   Grid.Column="1"/>
        </Grid>
    </Shell.TitleView>

    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="15">

            <!-- Фрейм со списком товаров или заглушкой -->
            <Frame BackgroundColor="White" Padding="10" CornerRadius="10" Margin="10">
                <StackLayout>
                    <Label x:Name="EmptyCartLabel"
                           Text="Тут будут товары"
                           FontSize="20"
                           TextColor="Gray"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           IsVisible="True"/>

                    <CollectionView x:Name="CartCollectionView"
                                    ItemsSource="{Binding CartItems}"
                                    IsVisible="False">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>

                                    <Image Source="{Binding ProductImage}" 
                                           HeightRequest="60" 
                                           WidthRequest="60" 
                                           Aspect="AspectFit"
                                           Grid.Column="0" />

                                    <Label Text="{Binding ProductName}"
                                           FontSize="25"
                                           TextColor="Black"
                                           VerticalTextAlignment="Center"
                                           Grid.Column="1" />

                                    <Label Text="{Binding ProductCost, StringFormat='{0:C}'}"
                                           FontSize="25"
                                           TextColor="#8dbf42"
                                           VerticalTextAlignment="Center"
                                           HorizontalTextAlignment="End"
                                           Grid.Column="2" />

                                    <ImageButton Source="close_icon.png"
                                                 BackgroundColor="Transparent"
                                                 Clicked="removeFromCart_Clicked"
                                                 CommandParameter="{Binding}"
                                                 Grid.Column="3" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>

            <!-- Фрейм для оплаты -->
            <Frame BackgroundColor="White" Padding="10" CornerRadius="10" Margin="10">
                <StackLayout Spacing="15">

                    <!-- Сумма к оплате -->
                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <Label Text="Всего к оплате:"
                               FontSize="25"
                               TextColor="Black"
                               VerticalOptions="Center"/>
                        <Label x:Name="TotalCostLabel"
                               Text="{Binding TotalCost, StringFormat='{0:C}'}"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="#8dbf42"
                               HorizontalOptions="EndAndExpand"
                               VerticalOptions="Center"/>
                    </StackLayout>

                    <!-- Способ оплаты -->
                    <Label Text="Способ оплаты:"
                           FontSize="20"
                           TextColor="Black"
                           FontAttributes="Bold" />

                    <!-- Радио-кнопка: Бонусы -->
                    <RadioButton GroupName="PaymentMethod"
                                 Content="{Binding BonusOptionText}"
                                 Value="Bonus"
                                 IsChecked="{Binding IsBonusSelected}" />

                    <!-- Радио-кнопка: Карта -->
                    <RadioButton GroupName="PaymentMethod"
                                 Content="Оплатить картой"
                                 Value="Card"
                                 IsChecked="{Binding IsCardSelected}" />

                    <!-- Кнопка оплаты -->
                    <Button Text="Перейти к оплате"
                            CornerRadius="25"
                            FontSize="22"
                            BackgroundColor="#8dbf42"
                            TextColor="White"
                            Command="{Binding ProceedToPaymentCommand}" />

                </StackLayout>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
