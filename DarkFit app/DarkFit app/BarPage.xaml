<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DarkFit_app"
             Title="DARKFIT BAR"
             BackgroundColor="#f1f2f3"
             x:Class="DarkFit_app.BarPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <!-- Фрейм для выбора категории с кнопкой корзины -->
            <Frame BackgroundColor="White" Padding="10" CornerRadius="10" Margin="10,0,10,10">
                <Grid VerticalOptions="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>

                    <Picker x:Name="CategoryPicker" 
                            Title="Выберите категорию" 
                            FontSize="25"
                            VerticalOptions="Center"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"
                            HeightRequest="70"
                            ItemsSource="{Binding Categories}"
                            SelectedItem="{Binding SelectedCategory, Mode=TwoWay}" 
                            ItemDisplayBinding="{Binding ProductTypeName}"
                            Grid.Column="0" />

                    <ImageButton Source="korzina.png"
                                 HeightRequest="40"
                                 WidthRequest="40"
                                 BackgroundColor="Transparent"
                                 VerticalOptions="Center"
                                 HorizontalOptions="End"
                                 Clicked="cartButton_Clicked"
                                 Grid.Column="1"/>
                </Grid>
            </Frame>

            <!-- Фрейм для списка товаров -->
            <Frame BackgroundColor="White" Padding="10" CornerRadius="10">
                <CollectionView ItemsSource="{Binding FilteredProducts}" 
                                HorizontalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="5" ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="80" />
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding ProductImage}" 
                                       HeightRequest="50" 
                                       WidthRequest="50" 
                                       Aspect="AspectFill"
                                       Grid.Column="0" />
                                <Label Text="{Binding ProductName}"
                                       FontSize="22"
                                       TextColor="Black"
                                       VerticalTextAlignment="Center"
                                       Grid.Column="1" />
                                <StackLayout Grid.Column="2" VerticalOptions="Center" HorizontalOptions="End">
                                    <Button Text="Купить"
                                            x:Name="buyButton"
                                            CornerRadius="20"
                                            TextTransform="None"
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            BackgroundColor="#8dbf42"
                                            TextColor="White"
                                            Clicked="buyButton_Clicked"
                                            Command="{Binding BuyCommand}" />
                                    <Label Text="{Binding ProductCost, StringFormat='{0:C}'}"
                                           FontSize="20"
                                           TextColor="Black"
                                           VerticalTextAlignment="Center"
                                           HorizontalTextAlignment="Center" />
                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
